{
  "name": "techShop",
  "version": "1.0.0",
  "description": "MERN ecommerce website",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "client": "npm start --prefix frontend",
    "server": "nodemon backend/server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run start\" \"npm run client\"",
    "build": "cd frontend; npm ci; npm run build",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fjcasti1/ecommerceMERN.git"
  },
  "author": "Francisco Castillo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fjcasti1/ecommerceMERN/issues"
  },
  "homepage": "https://github.com/fjcasti1/ecommerceMERN#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "stripe": "^8.137.0"
  },
  "devDependencies": {
    "concurrently": "6.0.0",
    "nodemon": "2.0.7"
  }
}
